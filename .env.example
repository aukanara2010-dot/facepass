# =============================================================================
# Fecapass Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!

# =============================================================================
# Application Settings
# =============================================================================
# Application name
APP_NAME=FacePass
# Application version
APP_VERSION=1.0.0
# Enable debug mode (set to False in production)
DEBUG=False
# Domain configuration
DOMAIN=facepass.pixorasoft.ru
# Staging domain for purchases
STAGING_DOMAIN=staging.pixorasoft.ru
CRON_SECRET=your_cron_secret_here

# =============================================================================
# PostgreSQL Main Database Configuration
# =============================================================================
# Main database username
POSTGRES_USER=fecapass_user
# Main database password (use strong password in production)
POSTGRES_PASSWORD=your_secure_password_here
# Main database name
POSTGRES_DB=fecapass_main
# Main database host (use service name from docker-compose)
MAIN_DB_HOST=db_main
# Main database port
MAIN_DB_PORT=5432

# =============================================================================
# PostgreSQL Vector Database Configuration
# =============================================================================
# Vector database host (use service name from docker-compose)
VECTOR_DB_HOST=db_vector
# Vector database port
VECTOR_DB_PORT=5432
# Vector database name
VECTOR_POSTGRES_DB=fecapass_vector

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis host (use service name from docker-compose)
REDIS_HOST=redis
# Redis port
REDIS_PORT=6379
# Redis database number (0-15)
REDIS_DB=0

# =============================================================================
# Celery Configuration
# =============================================================================
# Celery broker URL (leave empty to use Redis URL)
CELERY_BROKER_URL=
# Celery result backend URL (leave empty to use Redis URL)
CELERY_RESULT_BACKEND=

# =============================================================================
# Beget S3 Storage Configuration
# =============================================================================
# S3 endpoint URL (Beget S3 endpoint)
S3_ENDPOINT=https://s3.beget.com
# S3 access key ID
S3_ACCESS_KEY=your_s3_access_key_here
# S3 secret access key
S3_SECRET_KEY=your_s3_secret_key_here
# S3 bucket name for storing face images
S3_BUCKET=fecapass-images
# S3 region (Beget uses ru-1)
S3_REGION=ru-1

# =============================================================================
# Face Recognition Settings
# =============================================================================
# Minimum confidence threshold for face detection (0.0-1.0)
FACE_DETECTION_THRESHOLD=0.6
# Minimum similarity threshold for face matching (0.0-1.0)
FACE_SIMILARITY_THRESHOLD=0.7
# Dimension of face embedding vectors (default: 512 for InsightFace)
EMBEDDING_DIMENSION=512
